    &lt;/tr&gt;
  &lt;/thead&gt;
  &lt;tbody&gt;
    &lt;tr&gt;
      &lt;td style=&quot;text-align: right&quot;&gt;松山&lt;/td&gt;
      &lt;td&gt;-&lt;/td&gt;
      &lt;td style=&quot;text-align: right&quot;&gt;2:20&lt;/td&gt;
      &lt;td&gt;2:10&lt;/td&gt;
